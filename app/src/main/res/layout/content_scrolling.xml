<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollContent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_book_scrolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookScrollingActivity">
    <RelativeLayout
            android:id="@+id/storyRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <!-- Chapter Image -->
        <ImageView
                android:id="@+id/pageImage"
                android:layout_width="412dp"
                android:layout_height="300dp"/>
        <!-- Chapter Text -->
        <TextView
                android:id="@+id/chapterContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:layout_below="@+id/pageImage"
                android:text=""
                android:textSize="20sp"
                android:typeface="serif"
                android:justificationMode="inter_word"/>
        <!-- Choice Buttons -->
        <ImageButton
                android:id="@+id/option1"
                app:srcCompat="@drawable/ic_twotone_looks_one_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/fab_margin"
                android:layout_below="@+id/chapterContents"
                android:background="@color/dark_red1"/>
        <ImageButton
                android:id="@+id/option3"
                app:srcCompat="@drawable/ic_twotone_play_arrow_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/fab_margin"
                android:layout_below="@+id/chapterContents"
                android:background="@color/dark_green"/>
        <ImageButton
                android:id="@+id/option2"
                app:srcCompat="@drawable/ic_twotone_looks_two_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/fab_margin"
                android:layout_below="@+id/chapterContents"
                android:background="@color/dark_blue1"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>