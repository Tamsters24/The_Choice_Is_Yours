<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPassword"
        android:background="@color/forgot_pwd_background">
    <!-- Back button to Previous (Login Activity) -->
    <ImageButton
            android:id="@+id/forgotPwdToLoginBtn"
            app:srcCompat="@drawable/ic_twotone_arrow_circle_left_24"
            android:layout_width="54dp"
            android:layout_height="46dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintVertical_bias="0.09"
            android:background="@null"/>
    <TextView
            android:id="@+id/forgotPwdTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.2"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/forgot_pwd"
            android:textSize="30sp"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    <TextView
            android:id="@+id/forgotPwdMsg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.35"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/forgot_msg1"
            android:textSize="16sp"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    <TextView
            android:id="@+id/forgotPwdMsg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.4"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/forgot_msg2"
            android:textSize="16sp"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    <!-- EditText: email prompt -->
    <EditText
            android:id="@+id/forgotEmail"
            android:drawableStart="@drawable/ic_twotone_account_box_24"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.55"
            android:background="@drawable/edittext_box"
            android:padding="5dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/prompt_email"
            android:typeface="serif"
            android:textColorHint="@color/white"
            android:autofillHints=""/>
    <!-- Button: send email -->
    <Button
            android:id="@+id/forgotPwdEmailBtn"
            android:layout_width="155sp"
            android:layout_height="50sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.75"
            app:backgroundTint="@color/black"
            android:text="@string/forgot_email"
            android:textSize="11sp"
            android:typeface="serif"
            android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>