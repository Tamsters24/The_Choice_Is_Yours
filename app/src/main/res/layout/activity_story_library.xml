<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">
    <!-- Back button to Previous (Main Activity) -->
    <ImageButton
            android:id="@+id/libraryToMain_btn"
            app:srcCompat="@drawable/ic_twotone_arrow_circle_left_24"
            android:layout_width="54dp"
            android:layout_height="46dp"
            android:layout_margin="25dp"
            android:tint="@color/mustard_yellow"
            android:background="@null"/>
    <!-- Buttons for Library -->
    <Button
            android:id="@+id/vol1_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.17"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="19dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@color/dark_red1"
            android:text="@string/vol1_title"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    <Button
            android:id="@+id/vol2_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.17"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="19dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@color/dark_blue1"
            android:text="@string/vol2_title"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    <Button
            android:id="@+id/vol3_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.17"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="19dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@color/brown_tan"
            android:text="@string/vol3_title"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    <Button
            android:id="@+id/vol4_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.17"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="19dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@color/dark_green"
            android:text="@string/vol4_title"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    <Button
            android:id="@+id/vol5_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@color/orange"
            android:text="@string/vol5_title"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/white"/>
</LinearLayout>