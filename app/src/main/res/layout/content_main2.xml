<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main2">

    <RelativeLayout
            android:id="@+id/contentMain2RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <!-- Chapter Image -->
        <ImageView
                android:id="@+id/contentMain2ChapterImage"
                android:layout_width="412dp"
                android:layout_height="300dp"/>
        <!-- Chapter Text -->
        <TextView
                android:id="@+id/contentMain2ChapterContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:layout_below="@+id/contentMain2ChapterImage"
                android:text=""
                android:textSize="20sp"
                android:typeface="serif"
                android:justificationMode="inter_word"/>
        <!-- Choice Buttons -->
        <ImageButton
                android:id="@+id/main2Option1"
                app:srcCompat="@drawable/ic_twotone_looks_one_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/fab_margin"
                android:layout_below="@+id/contentMain2ChapterContents"
                android:background="@color/dark_red1"/>
        <ImageButton
                android:id="@+id/main2Option3"
                app:srcCompat="@drawable/ic_twotone_play_arrow_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/fab_margin"
                android:layout_below="@+id/contentMain2ChapterContents"
                android:background="@color/dark_green"/>
        <ImageButton
                android:id="@+id/main2Option2"
                app:srcCompat="@drawable/ic_twotone_looks_two_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/fab_margin"
                android:layout_below="@+id/contentMain2ChapterContents"
                android:background="@color/dark_blue1"/>
        <ImageButton
                android:id="@+id/main2Option4"
                app:srcCompat="@drawable/ic_twotone_looks_4_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/fab_margin"
                android:layout_below="@+id/main2Option3"
                android:background="@color/brown_tan"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>