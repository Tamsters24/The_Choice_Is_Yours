<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookCover">
    <ImageView
            android:id="@+id/coverPage"
            app:srcCompat="@drawable/blank_cover"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>
    <Button
            android:id="@+id/startBook_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/guideline_1"
            app:layout_constraintBottom_toTopOf="@+id/guideline_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.73"
            app:layout_constraintHeight_percent="0.08"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@color/light_blue1"
            android:text="@string/proceed_btn"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    <Button
            android:id="@+id/checkProgress_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/guideline_2"
            app:layout_constraintTop_toBottomOf="@id/guideline_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.73"
            app:layout_constraintHeight_percent="0.08"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@color/yellow_tan"
            android:text="@string/return_btn"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    <!-- Buttons Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.76"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.94"/>

</androidx.constraintlayout.widget.ConstraintLayout>