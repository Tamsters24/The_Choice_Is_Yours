<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainActivityConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/mainCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/blank_cover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/mainToStoryChoice_btn"
            android:layout_width="262dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="250dp"
            android:layout_marginStart="65dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@color/dark_red1"
            android:text="@string/cover_to_library_btn"
            android:textSize="18sp"
            android:typeface="serif"
            android:textColor="@color/white"/>
    <Button
            android:id="@+id/mainToLogin_btn"
            android:layout_width="262dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="380dp"
            android:layout_marginStart="65dp"
            app:backgroundTint="@color/brown_tan"
            android:text="@string/cover_login_btn"
            android:textSize="15sp"
            android:typeface="serif"
            android:textColor="@color/white"/>
    <Button
            android:id="@+id/MainToRegistration_btn"
            android:layout_width="262dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="460dp"
            android:layout_marginStart="65dp"
            android:text="@string/cover_register_btn"
            android:textSize="15sp"
            android:typeface="serif"
            android:textColor="@color/white"/>
    <Button
            android:id="@+id/MainToInstructions_btn"
            android:layout_width="262dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="540dp"
            android:layout_marginStart="65dp"
            app:backgroundTint="@color/light_blue1"
            android:text="@string/cover_instructions_btn"
            android:textSize="15sp"
            android:typeface="serif"
            android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>