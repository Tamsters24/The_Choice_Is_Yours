<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TableRow android:layout_width="match_parent"
                  android:layout_height="228dp">
            <ImageButton
                    android:id="@+id/vol1"
                    app:srcCompat="@drawable/volume1"
                    android:layout_width="115dp"
                    android:layout_height="165dp"
                    android:layout_weight="1"
                    android:padding="5dp"/>
            <ImageButton
                    android:id="@+id/vol2"
                    app:srcCompat="@drawable/volume2"
                    android:layout_width="115dp"
                    android:layout_height="165dp"
                    android:layout_weight="1"
                    android:padding="5dp"/>
            <ImageView
                    android:id="@+id/cover3"
                    app:srcCompat="@drawable/volume3"
                    android:layout_width="137dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:padding="5dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/cover4"
                    app:srcCompat="@drawable/volume4"
                    android:layout_width="137dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:padding="5dp"/>
            <ImageView
                    android:id="@+id/cover5"
                    app:srcCompat="@drawable/volume5"
                    android:layout_width="137dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:padding="5dp"/>
            <ImageView
                    android:id="@+id/cover6"
                    app:srcCompat="@drawable/volume6"
                    android:layout_width="137dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:padding="5dp"/>
        </TableRow>
    </TableLayout>
    <Button
            android:id="@+id/button3"
            android:text="@string/title_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/cover7"
                    app:srcCompat="@drawable/volume7"
                    android:layout_width="137dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
