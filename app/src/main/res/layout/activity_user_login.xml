<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserLogin"
        android:background="@color/login_background">
    <ImageButton
            android:id="@+id/loginToMainBtn"
            app:srcCompat="@drawable/ic_twotone_arrow_circle_left_24"
            android:layout_width="54dp"
            android:layout_height="46dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintVertical_bias="0.09"
            android:background="@null"/>
    <EditText
            android:id="@+id/loginEmail"
            android:drawableStart="@drawable/ic_twotone_account_box_24"
            android:inputType="textEmailAddress"
            android:hint="@string/prompt_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.45"
            android:textColorHint="@color/white"
            android:background="@drawable/edittext_box"
            android:padding="5dp"
            android:ems="10"/>
    <EditText
            android:id="@+id/loginPassword"
            android:drawableStart="@drawable/ic_twotone_lock_24"
            android:inputType="textPassword"
            android:hint="@string/prompt_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.6"
            android:textColorHint="@color/white"
            android:background="@drawable/edittext_box"
            android:padding="5dp"
            android:ems="10"/>
    <Button
            android:id="@+id/loginToCreateAcctBtn"
            android:text="@string/action_sign_in"
            android:layout_width="155sp"
            android:layout_height="35sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.82"
            android:textSize="11sp"
            android:textColor="@color/white"
            app:backgroundTint="@color/dark_blue1"/>
    <Button
            android:id="@+id/forgotPwdBtn"
            android:text="@string/action_forgot_pwd"
            android:layout_width="155sp"
            android:layout_height="35sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.82"
            app:layout_constraintVertical_bias="0.65"
            android:textSize="11sp"
            android:textColor="@color/white"
            app:backgroundTint="@color/dark_blue1"/>
    <Button
            android:id="@+id/acctLoginBtn"
            android:text="@string/submit_btn"
            android:layout_width="155sp"
            android:layout_height="50sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.8"
            android:textSize="11sp"
            android:textColor="@color/white"
            app:backgroundTint="@color/dark_blue1"/>
</androidx.constraintlayout.widget.ConstraintLayout>