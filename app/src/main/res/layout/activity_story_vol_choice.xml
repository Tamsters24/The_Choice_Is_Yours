<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">
    <Button
            android:id="@+id/vol1_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@color/dark_red1"
            android:text="@string/vol1_title"
            android:typeface="serif"
            android:textStyle="bold"/>
    <Button
            android:id="@+id/vol2_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/rounded_button"
            android:text="@string/vol2_title"
            android:typeface="serif"
            android:textStyle="bold"/>
    <Button
            android:id="@+id/vol3_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@color/brown_tan"
            android:text="@string/vol3_title"
            android:typeface="serif"
            android:textStyle="bold"/>
    <Button
            android:id="@+id/vol4_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/rounded_button"
            android:text="@string/vol4_title"
            android:typeface="serif"
            android:textStyle="bold"/>
</LinearLayout>